<%- include('partials/header') %>
<div class="container mt-5" style="padding-top: 4em;">
  <% if(locals.errors){ %>
    <% errors.forEach(error => { %>
        <ul>
            <li class="alert alert-danger"><%= error.message%></li>
        </ul>
    <% }); %>
  <% } %>

  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="roll_number">Roll Number</label>
              <input type="text" class="form-control" name="rollNumber" autofocus>
            </div>
            <div class="form-group">
              <label for="studentName">Student Name</label>
              <input type="text" class="form-control" name="studentName">
            </div>
            <div class="form-group">
              <label for="codeforcesId">Codeforces Handle</label>
              <input type="text" class="form-control" name="codeforcesId">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>
          <p class="lead">GO to  <a href="/users/leaderboard">LeaderBoard</a></p>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
